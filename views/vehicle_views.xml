<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- VISTA FILTROS Y BÚSQUEDA-->
    <record id="view_dealer_vehicle_search" model="ir.ui.view">
        <field name="name">dealer.vehicle.search</field>
        <field name="model">dealer.vehicle</field>
        <field name="arch" type="xml">
            <search>
                <field name="name" string="Vehículo"/>
                <field name="brand"/>
                <field name="model"/>
                <field name="mechanic_id"/>

                <separator/>

                <filter string="Disponibles" name="available" domain="[('state','=','available')]"/>
                <filter string="En mantenimiento" name="maintenance" domain="[('state','=','maintenanece')]"/>

                <group expand="1" string="Agrupar Por">
                    <filter string="Marca" name="group_by_brand" context="{'group_by':'brand'}"/>
                    <filter string="Estado" name="group_by_state" context="{'group_by':'state'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- VISTA LISTA -->
    <record id="view_dealer_vehicle_tree" model="ir.ui.view">
        <field name="name">dealer.vehicle.view</field>
        <field name="model">dealer.vehicle</field>
        <field name="arch" type="xml">
            <list decoration-info="state=='new'" decoration-success="state=='available'" decoration-muted="state == 'sold'">
                <field name="name"/>
                <field name="brand"/>
                <field name="model"/>
                <field name="year"/>
                <field name="price"/>
                <field name="state" widget="badge"/>
                <field name="mechanic_id" widget="many2one_avatar"/>
            </list>
        </field>
    </record>

    <!-- VISTA FORMULARIO -->
    <record id="view_dealer_vehicle_kanban" model="ir.ui.view">
        <field name="name">dealer.vehicle.kanban</field>
        <field name="model">dealer.vehicle</field>
        <field name="arch" type="xml">
            <kanban default_group_by="state">
                <field name="id"/>
                <field name="image"/>
                <field name="name"/>
                <field name="brand"/>
                <field name="model"/>
                <field name="price"/>
                <field name="currency_id"/>

                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click">
                            <div class="o_kanban_image">
                                <field name="image" widget="image"/>
                            </div>
                            <div class="oe_kanban_details">
                                <strong class="o_kanban_record_title">
                                    <field name="brand"/> - <field name="model"/>
                                </strong>
                                <div class="o_kanban_record_bottom">
                                    <div class="oe_kanban_bottom_left">
                                        <field name="price" widget="monetary" options="{'currency_field': 'currency_id'}"/>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>
</odoo>